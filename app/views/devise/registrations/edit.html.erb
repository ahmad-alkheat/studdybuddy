<h2>Edit your profile</h2>
<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { :multipart => true, method: :put }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :avatar, as: :file %>
    <%= f.input :email %>
    <%= f.input :name %>
    <%= f.label :Department %>
    <%= f.select :department,  options_for_select(department, :selected => current_user.department) %><br/>
    <%= f.label :Gender %>
    <%=f.select :gender, options_for_select(gender, :selected => current_user.gender) %><br/>
    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
    <% end %>
    <% unless current_user.provider %>
      <%= f.input :password, label: "New password", autocomplete: "off", hint: "leave it blank if you don't want to change it", required: false %>
      <%= f.input :password_confirmation, label: "New password again", required: false %>
    <%end%>
  </div>


  <div class="form-actions">
    <%= f.button :submit, "Update" %>
  </div>
<% end %>


<h3>Cancel my account</h3>

<p>Unhappy? <%= link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

<%= link_to "Back", :back %>
