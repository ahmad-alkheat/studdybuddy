<h2>Edit your profile</h2>
<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { :multipart => true, method: :put }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :avatar, as: :file, label: false %>
    <%= f.input :email, label: false %>
    <%= f.input :name, label: false %>
    <%= f.input :department, collection: department, label: false , :selected => current_user.department %><br/>
    <%=f.input :gender, collection: gender, label: false, :selected => current_user.gender %>
    <%= f.button :submit, "Update" %>
    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
    <% end %>

    <div id='links'>
      <%= link_to "Delete account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %>
    </div>
  </div>

<% end %>
