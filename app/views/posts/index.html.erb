<% @posts.each do |post| %>
	<div id="post">
		<%= post.submitted_by %>
		<%= post.course_name %>
		<%= post.course_number %>
		<% if current_user.email == post.submitted_by %>
			<%= link_to "Edit", edit_post_path(post) %>
			<%= link_to "Delete", post_path(post), method: :DELETE, data: { confirm: 'Are you sure?' }  %>
		<% end %>
	</div>
<% end%>

